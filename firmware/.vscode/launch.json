{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "./build_v2/gekkofirmis.elf",
            "request": "attach",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "Debug print",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "servertype": "openocd",
            "device": "EFR32MG1P232F256GM48",
            "configFiles": [
                "openocd/adapter.cfg"
            ],
            "svdFile": "EFR32FG14P233F256GM48.svd",

            /* The following path is needed if the ARM toolchain
             * is installed as a VS Code extension.
             * If arm-none-eabi-gdb is installed elsewhere,
             * comment it out. */
            "armToolchainPath": "${config:arm-none-eabi.bin}"
        }
    ]
}
